<h2>Log in</h2>

<%= form_for( resource, { :as => resource_name, :url => session_path( resource_name ), :html => { :class => 'form-horizontal panel panel-primary sign-in-form' } } ) do |f| -%>
  <div class="text-center">
    <%= image_tag( 'logo.jpg' ) -%>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title">Sistema de Manejo de Requerimientos</h3>
  </div>
  <div class="panel-body">
    <div class="form-group">
      <%- textToDisplay = t( :username ).capitalize -%>
      <%= f.label( :username, textToDisplay, { :class => 'col-sm-2 control-label' } ) -%>
      <div class="col-sm-9">
        <div class="input-group">
          <%= f.text_field( :username, { :autofocus => true, :placeholder => textToDisplay, :class => 'form-control', :required => true } ) -%>
          <span class="input-group-addon">@unibague.edu.co</span>
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <%- textToDisplay = t( :password ).capitalize -%>
      <%= f.label( :password, textToDisplay, { :class => 'col-sm-2 control-label' } ) -%>
      <div class="col-sm-9">
        <%= f.password_field( :password, { :autocomplete => 'off', :placeholder => textToDisplay, :class => 'form-control', :required => true } ) -%>
      </div>
    </div>
    
  <%- if ( devise_mapping.rememberable? ) -%>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-9">
        <div class="checkbox">
          <%- textToDisplay = ( f.check_box( :remember_me ) + ' ' + t( :remember_me ).capitalize ) -%>
          <%= f.label( :remember_me, textToDisplay ) -%>
        </div>
      </div>
    </div>
  <%- end -%>
  </div>
  <div class="panel-footer">
    <div><%= f.submit( t( :sign_in ).capitalize, { :class => 'btn btn-primary' } ) -%></div>
  </div>
<%- end -%>

<%= render( 'users/shared/links' ) -%>
